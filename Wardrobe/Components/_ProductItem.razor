<div class="product-item">
    <img src="data:image/png;base64,@Convert.ToBase64String(Product.ImageData)" alt="@Product.Name" />
    <div class="product-item__info">
        <h3 class="product-brand" style="text-align: left;">@Product.Name</h3>
        <h4 class="product-category" style="text-align: left;">@Product.Category.Name</h4>
        <p class="product-price">@Product.Price.ToString("C", new System.Globalization.CultureInfo("fr-FR"))</p>
    </div>    
</div>

@code {
    [Parameter]
    public ProductDTO Product { get; set; }
}
