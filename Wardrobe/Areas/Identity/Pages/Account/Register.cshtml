@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="login-container">
    <div class="login-main-container">
        <div class="login-main-container__content">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h4 class="login-column__header">Login information</h4>
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <!-- Email -->
                <div class="login-input">
                    <input asp-for="Input.Email" class="login-input-container" autocomplete="username" aria-required="true" placeholder="Email" />
                    <label asp-for="Input.Password" class="login-form-floating">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <!-- Password -->
                <div class="login-input">
                    <input asp-for="Input.Password" class="login-input-container" autocomplete="current-password" aria-required="true" placeholder="Password" />
                    <label asp-for="Input.Password" class="login-form-floating">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <!-- Confirm Password -->
                <div class="login-input">
                    <input asp-for="Input.ConfirmPassword" class="login-input-container" autocomplete="new-password" aria-required="true" placeholder="Confirm password" />
                    <label asp-for="Input.ConfirmPassword" class="login-form-floating">Confirm password</label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>                
                <h4 class="login-column__header">Personal Information</h4>
                <!-- Name -->
                <div class="login-input">
                    <input asp-for="Input.FirstName" class="login-input-container" autocomplete="username" aria-required="true" placeholder="First Name" />
                    <label asp-for="Input.FirstName" class="login-form-floating">First Name</label>
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
                <!-- Last Name -->
                <div class="login-input">
                    <input asp-for="Input.LastName" class="login-input-container" autocomplete="username" aria-required="true" placeholder="Last Name" />
                    <label asp-for="Input.LastName" class="login-form-floating">LastName</label>
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
                <!-- Button -->
                <div class="login-input login-button__container">
                    <button id="registerSubmit" type="submit" class="login-button">Register</button>
                </div>
            </form>
        </div>
        <hr class="solid-divider" />
        <div class="login-main-container__content">
            <h4 class="login-column__header">Registered Users, Log In</h4>
            <div class="login-input login-button__container">
                <button onclick="window.location.href='/Identity/Account/Login';" class="login-button">Log In</button>
                <p style="margin: 0;">
                    <a style="color: black; text-decoration: underline; text-decoration-color: black;" id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
