@inject IJSRuntime JSRuntime

<div class="navigation">
    <a class="navigation__header" href="">ThreadVogue</a>
    <input type="checkbox" class="navigation__checkbox" id="navi-toggle" />

    <label for="navi-toggle" @onclick="ChangeBodyOverflowY" class="navigation__button">
        <span class="navigation__icon">&nbsp;</span>
    </label>

    <div class="navigation__background">&nbsp;</div>

    <nav class="navigation__nav">
        <ul class="navigation__list">
            <li class="navigation__item"><a href="/wardrobe" @onclick="CloseNavMenu" class="navigation__link"><span>01</span>Wardrobe Inventory</a></li>
            <li class="navigation__item"><a href="/itemtypes" @onclick="CloseNavMenu" class="navigation__link"><span>02</span>Create Item Type</a></li>
            <li class="navigation__item"><a href="/products" @onclick="CloseNavMenu" class="navigation__link"><span>03</span>Products</a></li>
        </ul>
    </nav>
</div>

@code {
    private bool CheckboxIsChecked = false;

    private async Task ChangeBodyOverflowY()
    {
        CheckboxIsChecked = !CheckboxIsChecked;
        await JSRuntime.InvokeVoidAsync("toggleBodyOverflowY", CheckboxIsChecked);
    }

    private async Task CloseNavMenu()
    {
        await ChangeBodyOverflowY();
        await JSRuntime.InvokeVoidAsync("eval", "document.getElementById('navi-toggle').checked = false;");
    }
}
